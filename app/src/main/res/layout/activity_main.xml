<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/text_user_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/border_left_right"
        android:layout_marginTop="@dimen/top_border"
        android:layout_marginRight="@dimen/border_left_right"
        android:text="@string/user"
        android:textColor="@color/black"
        android:textSize="@dimen/text_height"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/text_height"
        android:ems="10"
        android:hint="@string/user"
        android:inputType="textPersonName"
        app:layout_constraintLeft_toLeftOf="@id/text_user_label"
        app:layout_constraintRight_toRightOf="@id/text_user_label"
        app:layout_constraintTop_toBottomOf="@id/text_user_label" />

    <TextView
        android:id="@+id/text_password_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/border_left_right"
        android:layout_marginTop="@dimen/top_border_password"
        android:layout_marginRight="@dimen/border_left_right"
        android:text="@string/password"
        android:textColor="@color/black"
        android:textSize="@dimen/text_height"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextTextPassword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/top_border_password_text"
        android:ems="10"
        android:hint="@string/password"
        android:inputType="textPassword"
        app:layout_constraintLeft_toLeftOf="@id/text_user_label"
        app:layout_constraintRight_toRightOf="@id/text_user_label"
        app:layout_constraintTop_toBottomOf="@id/text_user_label"
        app:layout_constraintTop_toTopOf="parent"

        />

    <TextView
        android:id="@+id/text_app_name_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/border_left_right"
        android:layout_marginTop="@dimen/text_height"
        android:layout_marginRight="@dimen/border_left_right"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="@string/app_name"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="@dimen/text_height"
        app:layout_constraintTop_toTopOf="parent"


        />

    <Button
        android:id="@+id/button_Loggin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/top_border_button"
        android:layout_marginTop="404dp"
        android:layout_marginRight="@dimen/top_border_button"
        android:background="@color/design_default_color_primary_dark"
        android:text="@string/loggin"
        android:textSize="@dimen/text_height"
        app:layout_constraintTop_toTopOf="parent"

        />

    <TextView
        android:id="@+id/text_restart_loggin_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_top_restart"
        android:fontFamily="cursive"
        android:text="@string/restart_Loggin"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="@dimen/text_height"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="@dimen/border_left_right"
        android:layout_marginLeft="@dimen/border_left_right"


        />

</androidx.constraintlayout.widget.ConstraintLayout>